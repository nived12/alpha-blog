<h1>Articles listing page</h1>

<table>
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td>
                    <%= article.id %>
                </td>
                <td>
                    <%= article.title %> 
                </td>
                <td>
                    <%= article.description %>
                </td>
                <td>
                    Edit
                    Destroy
                </td>
            </tr>
        <% end %>
    </tbody>
</table>